<Window x:Class="FileStatistics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Statistics" Height="350" Width="525">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter File Path:" Grid.Row="0" Margin="0,0,10,5" FontWeight="Bold"/>
        <TextBox x:Name="FilePathTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Height="30" VerticalContentAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="DarkGray"/>

        <Button Content="Get File Statistics" Click="GetFileStatistics_Click" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,5" Padding="10,5" Background="#007ACC" Foreground="White" BorderThickness="0" FontWeight="Bold"/>

        <TextBlock x:Name="StatisticsTextBlock" Grid.Row="2" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,10,0,0" FontWeight="Bold"/>
    </Grid>
</Window>
