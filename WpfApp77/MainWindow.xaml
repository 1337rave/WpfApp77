<Window x:Class="FileStatistics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Statistics" Height="250" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Path to File:" Grid.Row="0" Margin="0,0,5,5"/>
        <TextBox x:Name="FilePathTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Width="200"/>

        <Button Content="Analyze File" Click="AnalyzeFile_Click" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,5"/>

        <TextBlock x:Name="OutputTextBlock" Grid.Row="2" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,10,0,0"/>
    </Grid>
</Window>
