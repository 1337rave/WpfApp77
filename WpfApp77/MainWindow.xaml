<Window x:Class="FileInteraction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Interaction" Height="250" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Find Word:" Grid.Row="0" Margin="0,0,5,5"/>
        <TextBox x:Name="FindTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Width="200"/>

        <TextBlock Text="Replace Word:" Grid.Row="1" Margin="0,0,5,5"/>
        <TextBox x:Name="ReplaceTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" Width="200"/>

        <Button Content="Replace Words" Click="ReplaceWords_Click" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,5"/>

        <TextBlock x:Name="OutputTextBlock" Grid.Row="3" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,10,0,0"/>
    </Grid>
</Window>
