<Window x:Class="FileSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Search" Height="450" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Search Word:" Grid.Row="0" Margin="0,0,10,5" FontWeight="Bold"/>
        <TextBox x:Name="SearchWordTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Height="30" VerticalContentAlignment="Center" Padding="5" BorderThickness="1" BorderBrush="DarkGray"/>

        <Button Content="Search" Click="Search_Click" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,5" Padding="10,5" Background="#007ACC" Foreground="White" BorderThickness="0" FontWeight="Bold"/>

        <TextBlock x:Name="ResultTextBlock" Grid.Row="2" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,10,0,0" FontWeight="Bold"/>

        <TextBlock Text="Results:" Grid.Row="3" Margin="0,20,0,10" FontWeight="Bold"/>
        <ListBox x:Name="ResultsListBox" Grid.Row="4" Grid.ColumnSpan="2" Margin="0,0,0,0" Background="WhiteSmoke" BorderBrush="DarkGray" BorderThickness="1" Padding="5" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
    </Grid>
</Window>
